---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Portfolio - yoyo yuu">
    <div class="flex justify-center items-start">
        <!-- Sidebar -->
        <div class="w-[180px] mr-4">
            <div class="sticky top-4 space-y-4">
                <!-- Stats -->
                <div
                    class="border border-brand-pink rounded overflow-hidden p-3 text-center"
                >
                    <div class="text-2xl font-rock-bold text-brand-pink mb-1">
                        XX
                    </div>
                    <div class="text-sm">Illustrations</div>
                </div>

                <!-- Categorias -->
                <div
                    class="border border-brand-pink rounded overflow-hidden p-3"
                >
                    <div
                        class="font-rock-bold text-brand-pink mb-2 text-center text-sm"
                    >
                        CATEGORIES
                    </div>
                    <div class="space-y-1">
                        <button
                            class="w-full text-left text-sm p-1 hover:text-blue-600"
                            >Highlights</button
                        >
                        <button
                            class="w-full text-left text-sm p-1 hover:text-blue-600"
                            >OCs</button
                        >
                        <button
                            class="w-full text-left text-sm p-1 hover:text-blue-600"
                            >Fanart</button
                        >
                        <button
                            class="w-full text-left text-sm p-1 hover:text-blue-600"
                            >Nose</button
                        >
                        <button
                            class="w-full text-left text-sm p-1 hover:text-blue-600"
                            >Sketch</button
                        >
                    </div>
                </div>

                <!-- Botón de comisiones -->
                <a
                    href="/comisiones"
                    class="block border border-brand-pink rounded overflow-hidden p-3 text-center bg-[#ffb3d9] hover:bg-[#ff8cc7] transition-colors"
                >
                    <div class="font-bold text-[#7b0e55] text-sm">
                        Commisision Me!
                    </div>
                </a>
            </div>
        </div>

        <!-- Galería -->
        <div class="w-[900px]">
            <div class="border border-brand-pink rounded overflow-hidden">
                <div
                    class="p-3 border-b border-brand-pink bg-brand-light-pink flex justify-between items-center"
                >
                    <h2 class="m-0 font-rock-bold text-brand-pink">
                        PORTFOLIO
                    </h2>
                    <div class="text-sm">
                        Order by:
                        <select
                            class="ml-2 border border-brand-pink rounded bg-white px-2 py-1"
                        >
                            <option>Newest</option>
                            <option>oldest</option>
                        </select>
                    </div>
                </div>
                <div class="p-4 grid grid-cols-3 gap-4">
                    {
                        Array.from({ length: 9 }).map((_, i) => (
                            <div class="group cursor-pointer">
                                <div class="aspect-square border border-brand-pink/30 rounded overflow-hidden mb-2 group-hover:border-brand-pink transition-colors">
                                    <div class="h-full bg-gradient-to-br from-pink-50 to-purple-50 flex items-center justify-center group-hover:scale-105 transition-transform">
                                        <span class="text-4xl text-brand-pink/40 group-hover:text-brand-pink/60">
                                            :D
                                        </span>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <div class="font-medium text-brand-pink">
                                        Title #{i + 1}
                                    </div>
                                    <div class="text-xs text-gray-500">
                                        Category • 2025
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</BaseLayout>
