---
import BaseLayout from "../layouts/BaseLayout.astro";

const projects = [
  {
    title: "This website",
    description: "My personal website and uuuuuuh thats it :D",
    tech: ["Astro", "Tailwind CSS", "JavaScript"],
    github: "https://github.com/yoyoyuu/yoyoyuu.github.io",
    image: "/projects/website.jpg"
  },
];
---

<BaseLayout title="Proyectos - yoyo yuu">
  <div class="flex justify-center">
    <div class="w-[800px]">
      <div class="border border-brand-pink rounded overflow-hidden">
        <h2 class="m-0 p-2 bg-brand-light-pink text-lg font-rock-bold text-center border-b border-brand-pink">
          MY SOFTWARE PROJECTS
        </h2>
        <div class="p-3">
          {projects.map(project => (
            <div class="border border-brand-pink/30 rounded p-3 mb-3 last:mb-0 hover:bg-[#fff0f7] transition-colors">
              <div class="flex gap-4">
                <div class="w-32 h-32 bg-gray-200 rounded flex items-center justify-center">
                  <span class="text-brand-pink">No pic bro</span>
                </div>
                <div class="flex-1">
                  <h3 class="font-rock-bold text-brand-pink text-xl mb-2">{project.title}</h3>
                  <p class="mb-3">{project.description}</p>
                  <div class="flex flex-wrap gap-2 mb-3">
                    {project.tech.map(tech => (
                      <span class="bg-brand-light-pink text-brand-pink text-xs px-2 py-1 rounded">
                        {tech}
                      </span>
                    ))}
                  </div>
                  <a href={project.github} class="text-brand-pink hover:underline text-sm">
                    Github repo â†’
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</BaseLayout>